        <label id="value" x="5" y="70" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_TINY" />
    </layout>
    <layout id="BottomLeftLayout">
        <drawable class="Background" />
        <label id="label" x="25" y="0" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_TINY" />
        <label id="value" x="112" y="22" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_RIGHT" font="Graphics.FONT_TINY" />
    </layout>
    <layout id="BottomRightLayout">
        <drawable class="Background" />
        <label id="label" x="center" y="0" color="Graphics.COLOR_BLACK" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_TINY" />
