<resources>
	<properties>
		<property id="Digits" type="number"><!--How many grid reference figures/digits? 4/6/8/10-->6</property>
		<property id="DefaultGrid" type="number"><!--Which grid to try first-->0</property>
		<property id="BestGuess" type="number"><!--How to choose the grid-->0</property>
		<property id="FontSize" type="number"><!--What size display one/two/three lines-->0</property>
	</properties>
	<settings>
		<setting propertyKey="@Properties.Digits" title="@Strings.digitsTitle">
			<settingConfig type="list">
				<listEntry value="10">@Strings.tenFigure</listEntry>
				<listEntry value="8">@Strings.eightFigure</listEntry>
				<listEntry value="6">@Strings.sixFigure</listEntry>
				<listEntry value="4">@Strings.fourFigure</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.DefaultGrid" title="@Strings.gridTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.OSGB</listEntry>
				<listEntry value="1">@Strings.OSIE</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.BestGuess" title="@Strings.guessTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.BestGuess</listEntry>
				<listEntry value="1">@Strings.Strict</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.FontSize" title="@Strings.sizeTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.oneLine</listEntry>
				<listEntry value="1">@Strings.twoLines</listEntry>
				<listEntry value="2">@Strings.threeLines</listEntry>
			</settingConfig>
		</setting>
	</settings>
	<strings>
		<string id="digitsTitle">What precision grid reference?</string>
		<string id="tenFigure">Ten-figure - 1m</string>
		<string id="eightFigure">Eight-figure - 10m</string>
		<string id="sixFigure">Six-figure - 100m</string>
		<string id="fourFigure">Four-figure - 1km</string>
		<string id="gridTitle">Default Ordnance Survey grid?</string>
		<string id="OSGB">Great Britain</string>
		<string id="OSIE">Ireland</string>
		<string id="guessTitle">Grid choice:</string>
		<string id="BestGuess">Best Guess</string>
		<string id="Strict">Strict</string>
		<string id="sizeTitle">Which layout (font size)?</string>
		<string id="oneLine">One line (original)</string>
		<string id="twoLines">Two lines (large)</string>
		<string id="threeLines">Three lines (larger)</string>
	</strings>
</resources>